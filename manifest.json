{
  "manifest_version": 2,
  "name": "Duplicate Content",
  "description": "Duplicate all the content of the current page",
  "version": "0.0.1",
  "browser_action": {
    "default_icon": "128.png",
    "default_title": "Duplicate text"
  },
  "icons": {
    "19": "19.png",
    "48": "48.png",
    "128": "128.png"
  },
  "background" : {
    "scripts" : ["background.js"]
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["content.js"]
  }],
  "permissions": ["activeTab", "tabs"]
}
